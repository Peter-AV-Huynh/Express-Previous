<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h1>To Do List</h1>
  <h2>(Click to Check Off Item)</h2>
  <form id="listInput" action="/toDoList" method="post">
    <input name="task" placeholder="" id="listItem" type="text">
    <button type="submit" id="addToList">+</button>
  </form>
  <section>
    <ul>
      <% for(var i=0; i<tasksArray.length; i++) {%>
        <li class="toDoList">
          <span><%= tasksArray[i].task %></span>
          <span><%= tasksArray[i].completed %></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
      <% } %>
    </ul>
  </section>
  <button type="button" name="button" id="removeCompleted">Clear completed</button>
  <button type="button" name="button" id="removeAll">Clear All</button>
  <script type="text/javascript" src="main.js"></script>
</body>
</html>
